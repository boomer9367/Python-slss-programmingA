	 public static void camp(int money) {
	        Scanner scanner = new Scanner(System.in);
	        Random random = new Random();

	        System.out.println("You arrive at a quiet clearing and decide to make camp.");
	        System.out.println("Do you want to (1) Rest or (2) Stay alert?");
	        System.out.print("Enter choice: ");
	        int choice = scanner.nextInt();

	        if (choice == 1) {
	            System.out.println("You try to get some sleep...");
	            if (random.nextBoolean()) {
	                System.out.println("But something attacks you in the night!");
	                fightwolf(scanner, money);
	            } else {
	                System.out.println("You sleep peacefully and regain your strength.");
	            }
	        } else if (choice == 2) {
	            System.out.println("You stay awake and keep watch.");
	            if (random.nextInt(100) < 30) {
	                System.out.println("Your watch pays off – you spot danger before it reaches you!");
	                fightwolf(scanner, money);
	            } else {
	                System.out.println("The night passes uneventfully.");
	            }
	        } else {
	            System.out.println("Invalid choice. You fall asleep by accident...");
	            fightwolf(scanner, money);
	        }
	    }
  
