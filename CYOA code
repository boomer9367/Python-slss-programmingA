	 public static void fightguard(Scanner scan, int money) {
	        Random rand = new Random();

	        int playerHealth = 50;
	        int enemyHealth = 60;
	        
	        	System.out.println(" ");
	        	System.out.println("P.S say the number to submit your move, not the name...");
	        	
	        while (playerHealth > 0 && enemyHealth > 0) {
	        	System.out.println(" ");
	            System.out.println("\n--- Your Turn ---");
	            System.out.println("Your Health: " + playerHealth);
	            System.out.println("Enemy Health: " + enemyHealth);
	            System.out.println("Choose your action:");
	            System.out.println("1. Punch (10-15 dmg)");
	            System.out.println("2. Kick (5-25 dmg)");
	            System.out.print("> ");
	            String input = scan.nextLine();

	            int damage = 0;
	            if (input.equals("1")) {
	                damage = rand.nextInt(6) + 10; // 10–15
	                System.out.println("You punch the enemy for " + damage + " damage!");
	            } else if (input.equals("2")) {
	                damage = rand.nextInt(21) + 5; // 5–25
	                System.out.println("You kick the enemy for " + damage + " damage!");
	            } else {
	                System.out.println("You hesitate... and do nothing.");
	            }

	            enemyHealth -= damage;

	            // Check if enemy is defeated
	            if (enemyHealth <= 0) {
	                System.out.println("You defeated the enemy!");
	                money += 10;
	                break;
	            }

	            // Enemy's turn
	            System.out.println("\n--- Enemy's Turn ---");
	            int enemyDamage = rand.nextInt(11) + 5; // 5–15
	            System.out.println("The enemy strikes you for " + enemyDamage + " damage!");
	            playerHealth -= enemyDamage;

	            if (playerHealth <= 0) {
	                System.out.println("You were defeated...");
	                System.out.println("You wake up back in your cell but this time with more restraints that you're unable to escape from...");
	                System.out.println("This is your fate...");
	                System.out.println("Ending 3: back where you started..");
	                System.exit(0);
	            }
	        }
	    }                                             
	
	 public static void fightwolf(Scanner scan, int money) {
	 Random rand = new Random();

	        int playerHealth = 50;
	        int enemyHealth = 120;
	        
	        	System.out.println(" ");
	        	
	        while (playerHealth > 0 && enemyHealth > 0) {
	        	System.out.println(" ");
